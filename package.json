{
  "name": "mcp-server-hub-server",
  "version": "1.0.0",
  "description": "MCP Server Hub Server",
  "main": "dist/server.js",
  "bin": {
    "mcp-server-hub-server": "dist/initialize.js"
  },
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "start:client": "node dist/client/client.js",
    "build": "tsc",
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/server.ts\"",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install || true"
  },
  "keywords": [
    "mcp",
    "model-context-protocol"
  ],
  "license": "ISC",
  "dependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/ws": "^8.18.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "inquirer": "^12.5.0",
    "ws": "^8.18.1",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "chokidar": "^3.6.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.28",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "ts-jest": "^29.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}